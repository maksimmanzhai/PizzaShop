<h2>Welcome to Pizza shop!</h2>

<div class="row">
	<% @products.each do |p| %>
	<div class="col-md-3">

		<div>
			<%= p.title %>
		</div>
		
		<div>
			<img src="<%= p.path_to_image %>" height="150" width="(150/10)*16">
		</div>
		
		<div>
			<%= p.description %>
		</div>
		
		<div>
			Price: <%= p.price %> rub.
		</div>
		
		<div>
			Size: <%= p.size %> cm.
		</div>

		<div>
			<button type="button" class="btn btn-success">Add to cart</button>
		</div>


	</div>
	<% end %>
</div>

</br>
</br>
