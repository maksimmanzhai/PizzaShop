<h2>Cart</h2>

<form action="/cart" method="POST" role="form">

	<div class="form-group">
		<label>Ваш заказ</label>
		<input id="orders_input" type="orders"/>
	</div>

	<div class="form-group">
		<label>Ваше имя</label>
		<input type="text" name="order[name]" class="form-control" value="<% @c.name %>">
	</div>

	<div class="form-group">
		<label>Ваш телефон</label>
		<input type="text" name="order[phone]" class="form-control" value="<% @c.phone %>">
	</div>

	<button type="submit" class="btn btn-primary">Заказать</button>

</form>
